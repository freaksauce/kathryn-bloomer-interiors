---
export interface Props {
  className?: string;
  sm: string;
  lg: string;
  alt: string;
  w?: string;
  h?: string;
}
const { alt, className, sm, lg, w, h } = Astro.props as Props;
---

<picture>
  <source media="(min-width: 575px)" srcset={lg} />
  <img class={className} src={sm} alt={alt} width={`${w}`} height={`${h}`} />
</picture>
