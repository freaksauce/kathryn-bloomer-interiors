---
export interface Props {
  className?: string;
  sm: string;
  lg: string;
  alt: string;
  w?: string;
  h?: string;
  lazy?: boolean;
}
const { alt, className, sm, lg, w, h, lazy } = Astro.props as Props;
---

<picture>
  <source media="(min-width: 575px)" srcset={lg} />
  <img
    class={className}
    src={sm}
    alt={alt}
    width={`${w}`}
    height={`${h}`}
    loading={`${lazy ? "lazy" : "eager"}`}
  />
</picture>
